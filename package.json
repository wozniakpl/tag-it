{
  "name": "tag-it",
  "version": "1.0.0",
  "description": "GitHub Action for Conventional Commits validation and semantic versioning",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --passWithNoTests",
    "precommit": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "ci": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm run test"
  },
  "keywords": [
    "github-action",
    "semantic-versioning",
    "conventional-commits"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.0.0"
  }
}
